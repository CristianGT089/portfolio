---
interface Props {
	title: string;
	company: string;
	init_date: string;
	end_date: string;
	description: string;
}

const { title, company, init_date, end_date, description} = Astro.props;

---

<div class="absolute w-3 h-3 bg-firstRed rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-firstRed"></div>
<time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{init_date} - {end_date}</time>
<h3 class="text-lg font-semibold text-white">{title}</h3>
<p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400 text-pretty">{description}</p>
